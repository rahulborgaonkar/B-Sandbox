<apex:page standardController="User" extensions="natterbox.EditNatterboxCredsExtension">
    <apex:messages />
    <apex:form >
        <apex:pageBlock title="Edit Natterbox Credentials" mode="edit">
            <apex:pageBlockButtons location="bottom">
                <apex:commandButton action="{!save}" value="Save" rerender="all">
                    <apex:param name="URL" value="{!$CurrentPage.parameters.formTarget}" assignTo="{!retURL}"/>
                </apex:commandButton>
                <apex:commandButton action="{!cancel}" value="Cancel" rerender="all">
                    <apex:param name="URL" value="{!$CurrentPage.parameters.formTarget}" assignTo="{!retURL}"/>
                </apex:commandButton>
            </apex:pageBlockButtons>
            <apex:pageBlockSection title="{!user.name}'s Credentials" columns="1">
                <apex:inputField value="{!user.natterbox__Natterbox_Username__c}" required="false"/>
                <apex:inputSecret value="{!user.natterbox__Natterbox_Password__c}" redisplay="true" required="false"/>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>