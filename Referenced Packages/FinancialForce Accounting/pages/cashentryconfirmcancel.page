<!-- cashentryconfirmcancel -->
<apex:page standardController="c2g__codaCashEntry__c" extensions="c2g.CashEntryCancelController" tabStyle="c2g__codaCashEntry__c">
	<script src="{!URLFOR($Resource.coda2go,'coda2go/web/script/lib.js')}" type="text/javascript"></script>
	<apex:stylesheet value="{!URLFOR($Resource.c2g__coda2go,'coda2go/web/css/style.css')}"/>
	<script>
		var CODA2GoButtons = new CODA2GoPage();
		var CODA2GoBtnSaveValue = "{!$Label.codaProcessing}";
	</script>
	<apex:form onsubmit="if(CODA2GoButtons.disableSaveButtons){ return CODA2GoButtons.disableSaveButtons(); }">
		<!-- Header -->
		<apex:sectionHeader title="{!$Label.cancelCashEntryTitle}" subtitle="{!viewstate.CashEntry.Name}" help="{!URLFOR('/apex/c2g__codahelploader?topicid=1331')}"/>
		<apex:pageBlock >
			<apex:pagemessages />
			<apex:pageBlockButtons location="bottom">
				<!-- Hidden Buttons -->
				<apex:commandButton value="{!$Label.cashEntryConfirmCancelButton}" id="cancelCashEntry_h" action="{!cancelCashEntry}" styleclass="hiddensubmit"/>
				<apex:commandButton value="{!$Label.cashEntryCancelCancelButton}" id="cancel_h" action="{!cancel}" styleclass="hiddensubmit" immediate="true" reRender=""/>
				<!-- End of Hidden Buttons -->
				<apex:commandButton value="{!$Label.cashEntryConfirmCancelButton}" id="cancelCashEntry" onclick="document.getElementById('{!$Component.cancelCashEntry_h}').click();return false;"/>
				<apex:commandButton value="{!$Label.cashEntryCancelCancelButton}" id="cancel" rerender="" onclick="if(!CODA.queing()){document.getElementById('{!$Component.cancel_h}').click()};return false;"/>
				<script>
					CODA2GoButtons.initButtons(["{!$Component.cancelCashEntry}","{!$Component.cancel}"]);
				</script>
			</apex:pageBlockButtons>
			<!--Canceled Cash Entry Editable Fields -->
			<apex:pageBlockSection columns="1">
				<apex:inputField id="cashEntryReference" value="{!viewState.CashEntry.Dto.c2g__Reference__c}"/>
				<apex:inputField id="Period" value="{!viewState.CashEntry.Dto.c2g__Period__c}" required="true"/>
				<apex:inputTextarea id="cashEntryDescription" value="{!viewState.CashEntry.Dto.c2g__Description__c}"/>
			</apex:pageBlockSection>
		</apex:pageBlock>
	</apex:form>
</apex:page>