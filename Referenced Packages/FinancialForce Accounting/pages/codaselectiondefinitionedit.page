                            </apex:column>
                            
                            <apex:column styleClass="widthicon alignright">                                     
                                <apex:facet name="header">&nbsp;</apex:facet>
                                <a href="javascript:CODA.addEventToQueueWithParam('removeLineItemHC{!SelectionCriterionHeaderLines.LineNumber}', removeLineItemHC, {!SelectionCriterionHeaderLines.SequenceNo}, '{!$Label.codaSelectionDefinitionEditPageRemovingLine2}', true);">
