<!-- codaopportunityCreateInvoices -->
<apex:page standardController="Opportunity" recordSetVar="selectedOpportunities" extensions="c2g.CODAOpportunityController">
    <apex:stylesheet value="{!URLFOR($Resource.c2g__coda2go,'coda2go/web/css/style.css')}"/>
	<style>
	.pbError { background-image:url({!URLFOR($Resource.coda2go, 'coda2go/web/images/pbErrorIcon.gif')});
	</style>
	<script src="{!URLFOR($Resource.coda2go,'coda2go/web/script/lib.js')}" type="text/javascript"></script>
	<script src="{!URLFOR($Resource.front,'front/base/frameworks/ext-core-3.1.0.js')}" type="text/javascript"></script>
	<!--locale configuration management -->
	<c:CODALocaleJS />
	<script>
        CODA.documentFunctionTimer("keyup", CODA.executeQueue, 1500);
        CODA.documentFunctionTimer("click", CODA.executeQueue, 1500);
        var CODA2GoButtons = new CODA2GoPage();
        var CODA2GoBtnSaveValue = "{!$Label.codaPageOpportunityConvertProcessing}";
    </script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js"></script>
	<script>
		var $FFDC = jQuery.noConflict();

		function checkErrorMessage() {
			if ($FFDC('.pbError').length > 0) {
				$FFDC('body,html').scrollTop($FFDC('.pbError').position().top);
			}
		}
	</script>
	<apex:sectionHeader title="{!$Label.codaOpportunityToInvoceTitle}" subtitle="{!$Label.codaOpportunityToInvoceSubTitle}"  help="{!URLFOR('/apex/c2g__codahelploader?topicid=1322')}"/>
	<apex:form onsubmit="if(CODA2GoButtons.disableSaveButtons){ return CODA2GoButtons.disableSaveButtons(); }">
		<DIV id="indicator"><img src="{!URLFOR($Resource.coda2go, 'coda2go/web/images/waiting.gif')}" align="absMiddle"/><span id="indicatortext"></span></DIV>
		<apex:pageBlock >
			<apex:outputPanel id="messagePanel" layout="block">
                <apex:outputPanel id="errorPanel" layout="block" styleClass="pbError" rendered="{!viewstate.showErrorMessages}">
                    <apex:repeat value="{!viewstate.errorMessages}" var="errorMessage" rendered="{!viewstate.showErrorMessages}">
                        <apex:outputText value="{!errorMessage}"/><br/>
                    </apex:repeat>
                </apex:outputPanel>
            </apex:outputPanel>
            <apex:pageMessage escape="false" summary="{!viewState.invalidOpportunitesMessage}" severity="info" strength="2" rendered="{!viewState.hasInvalidOpportunities}"/>
			<apex:pageBlockButtons location="top">
				<apex:outputpanel id="buttonPanel">
					<!-- Hidden Buttons -->
					<apex:commandButton value="{!$Label.opportunity2InvoiceCreateInvoicesButton}" action="{!createInvoices}" id="convert_h" styleclass="hiddensubmit" rendered="{!viewState.HasConvertableOpportunities}"/>
					<apex:commandButton value="{!$Label.nativeUIButtonGoBack}" action="{!cancel}" id="cancel_h" styleclass="hiddensubmit"/>
					<!--  End of Hidden Buttons-->
					<apex:commandButton value="{!$Label.opportunity2InvoiceCreateInvoicesButton}" id="convert" rerender="" onclick="if(!CODA.queing()){document.getElementById('{!$Component.convert_h}').click()};return false;" rendered="{!viewState.HasConvertableOpportunities}"/>
					<apex:commandButton value="{!$Label.nativeUIButtonGoBack}" id="cancel" rerender="" onclick="if(!CODA.queing()){document.getElementById('{!$Component.cancel_h}').click()};return false;"/>
					<script>
						CODA2GoButtons.initButtons(["{!$Component.convert}","{!$Component.cancel}"]);
					</script>
				</apex:outputpanel>
			</apex:pageBlockButtons>
			<apex:pageBlockSection title="{!$Label.codaOpportunityDetail}" collapsible="false" columns="2" id="opportunityDetail" rendered="{!viewState.HasConvertableOpportunities}">
				<apex:pageBlockSectionItem >
					<apex:outputLabel value="{!$ObjectType.c2g__codaInvoice__c.fields.c2g__InvoiceDate__c.label}" for="invoiceDate"/>
					<apex:outputPanel >
						<apex:inputField value="{!viewstate.dummyInvoice.dto.c2g__InvoiceDate__c}" id="invoiceDate"/>
						<apex:actionFunction name="onChangeInvoiceDate" action="{!calculatePeriod}" oncomplete="CODA.resumeQueueProcessing();CODA.setExpanderIconState('edit');" rerender="opportunityDetail, documentMemoRate, dualMemoRate, messagePanel"/>
						<script>
	                        CODA.addToFocusEvent("{!$Component.invoiceDate}");
	                        CODA.addQueuedOnBlurEvent(null, "{!$Component.invoiceDate}", "{!$Label.codaUpdatingDueDateAndPeriod}", onChangeInvoiceDate);
	                    </script>
	                </apex:outputPanel>
				</apex:pageBlockSectionItem>
				<apex:inputField value="{!viewstate.dummyInvoice.dto.c2g__Period__c}"/>
			</apex:pageBlockSection>
			<apex:pageBlockSection title="{!$Label.codaEnterOptionalExchangeRatesLabel}" collapsible="false" columns="1" rendered="{!viewState.HasConvertableOpportunities}">
				<apex:dataTable value="{!viewState.validOpportunities}" var="opportunityView" rowClasses="odd,even" headerClass="listheader" styleClass="list detailListnoPadding" border="0">
					<!-- opp name -->
					<apex:column styleClass="widthstandard">
                    	<apex:facet name="header">{!$ObjectType.opportunity.fields.name.label}</apex:facet>
                    	<apex:outputField value="{!opportunityView.codaOpportunity.dto.name}"/>
                    </apex:column>
                    <!-- opp value -->
                    <apex:column styleClass="widthmedium">
                    	<apex:facet name="header">{!$ObjectType.opportunity.fields.amount.label}</apex:facet>
                    	<apex:outputText value="{!opportunityView.opportunityAmount}"/>
                    </apex:column>
                    <!-- opp close date -->
                    <apex:column styleClass="widthmedium">
                    	<apex:facet name="header">{!$ObjectType.opportunity.fields.closedate.label}</apex:facet>
                    	<apex:outputField value="{!opportunityView.codaOpportunity.dto.closedate}"/>
                    </apex:column>
					<!-- override home rate -->
					<apex:column styleClass="widthmedium">
                    	<apex:facet name="header">{!$Label.codaInvoiceExchangeRateLabel}</apex:facet>
						<apex:outputPanel >
							<apex:inputText value="{!opportunityView.exchangeRateData.documentRate}" id="documentRate" styleclass="analysisdata" rendered="{!opportunityView.exchangeRateData.showDocRate}"/>
							<apex:inputText value="{!opportunityView.sameCurrencyRate}" styleclass="analysisdata" rendered="{!!opportunityView.exchangeRateData.showDocRate}" disabled="true"/>
						</apex:outputPanel>
                    </apex:column>
					<!-- home memo rate -->
					<apex:column styleClass="widthsmall">
                    	<apex:facet name="header">{!$Label.codaCurrentDocumentExchangeRateLabel}</apex:facet>
						<apex:outputText value="{!opportunityView.exchangeRateData.documentMemoRate}" id="documentMemoRate"/>
                    </apex:column>
					<!-- override dual rate -->
					<apex:column styleClass="widthmedium">
                    	<apex:facet name="header">{!$Label.codaDualExchangeRateLabel}</apex:facet>
						<apex:outputPanel >
							<apex:inputText value="{!opportunityView.exchangeRateData.dualRate}" id="dualRate" styleclass="analysisdata" rendered="{!opportunityView.exchangeRateData.showDualRate}" />
							<apex:inputText value="{!opportunityView.sameCurrencyRate}" styleclass="analysisdata" rendered="{!!opportunityView.exchangeRateData.showDualRate}" disabled="true"/>
						</apex:outputPanel>
                    </apex:column>
					<!-- dual memo rate -->
					<apex:column styleClass="widthsmall">
                    	<apex:facet name="header">{!$Label.codaCurrentDualExchangeRateLabel}</apex:facet>
						<apex:outputText value="{!opportunityView.exchangeRateData.dualMemoRate}" id="dualMemoRate"/>
                    </apex:column>
				</apex:dataTable>
			</apex:pageBlockSection>
		</apex:pageBlock>
	</apex:form>
</apex:page>